# MCP Server Configuration
# Copy this file to .env and fill in your API keys

# GitHub MCP Server
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token_here

# Web Search MCP Server (Brave Search API)
BRAVE_API_KEY=your_brave_api_key_here

# Memory Storage
MEMORY_STORAGE_PATH=./data/memory

# Database Configuration
DATABASE_URL=sqlite:./data/trading.db
SQLITE_DATABASE_PATH=./data/trading.db

# Filesystem Access
FILESYSTEM_ALLOWED_DIRECTORIES=./

# TypeScript Configuration
TYPESCRIPT_CONFIG_PATH=./tsconfig.json

# Trading API Keys (for your trading platform)
FLATTRADE_API_KEY=your_flattrade_api_key
FLATTRADE_API_SECRET=your_flattrade_api_secret
FLATTRADE_ACCESS_TOKEN=your_flattrade_access_token

FYERS_API_KEY=your_fyers_api_key
FYERS_API_SECRET=your_fyers_api_secret
FYERS_ACCESS_TOKEN=your_fyers_access_token

UPSTOX_API_KEY=your_upstox_api_key
UPSTOX_API_SECRET=your_upstox_api_secret
UPSTOX_ACCESS_TOKEN=your_upstox_access_token

ALICE_BLUE_API_KEY=your_alice_blue_api_key
ALICE_BLUE_API_SECRET=your_alice_blue_api_secret
ALICE_BLUE_ACCESS_TOKEN=your_alice_blue_access_token

# AI/ML Services
GOOGLE_GEMINI_API_KEY=your_gemini_api_key
OPENAI_API_KEY=your_openai_api_key_optional
ANTHROPIC_API_KEY=your_anthropic_api_key_optional

# Market Data APIs
NSE_API_KEY=your_nse_api_key_optional
BSE_API_KEY=your_bse_api_key_optional
MCX_API_KEY=your_mcx_api_key_optional


